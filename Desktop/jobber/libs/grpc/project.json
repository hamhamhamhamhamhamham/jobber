{
  "name": "grpc",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/grpc/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project grpc --web",
  "targets": {
    "build": {
      "dependsOn": ["generate-ts-proto"],
      "options": {
        "assets": [
          {
            "glob": "*.proto",
            "input": "{projectRoot}/src/lib/proto",
            "output": "proto" 
          }
        ]
      }
    },
   "generate-ts-proto": {
       
        "command":"protoc --plugin=protoc-gen-ts_proto=C:\\Users\\ASUS\\Desktop\\jobber\\node_modules\\.bin\\protoc-gen-ts_proto.cmd --ts_proto_out=types --ts_proto_opt=nestJs=true proto\\*.proto",
        "options": {
            "cwd":"{projectRoot}/src/lib",
            "input":["proto/*.proto"]
         },
        "cache": true
      }
  }
}
